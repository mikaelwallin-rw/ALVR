{
  "jsonid": "input_profile",
  "controller_type": "pico_controller",
  "device_class": "TrackedDeviceClass_Controller",
  "resource_root": "pico",
  "driver_name": "pico",
  "legacy_binding": "{pico}/input/legacy_bindings_pico_controller2.json",
  "input_bindingui_mode": "controller_handed",
  "should_show_binding_errors": true,
  "compatibility_mode_controller_type": "vive_controller",
  "input_bindingui_left": {
    "image": "{pico}/icons/neo3_left.svg"
  },
  "input_bindingui_right": {
    "image": "{pico}/icons/neo3_right.svg"
  },
  "input_source": {
    "/input/trackpad": {
      "type": "trackpad",
      "binding_image_point": [ 65, 49 ],
      "click": true,
      "touch": true,
      "order": 2
    },
    "/input/trigger": {
      "type": "trigger",
      "binding_image_point": [ 40, 39 ],
      "value": true,
      "click": true,
      "order": 1
    },
    "/input/grip": {
      "type": "trigger",
      "binding_image_point": [ 51, 80 ],
      "click": true,
      "order": 3
    },
    "/input/application_menu": {
      "type": "button",
      "click": true,
      "binding_image_point": [ 45, 50 ],
      "order": 4
    },
    "/input/system": {
      "type": "button",
      "binding_image_point": [ 60, 60 ],
      "click": true,
      "touch": true,
      "order": 0
    },
    "/input/skeleton/right": {
      "type": "skeleton",
      "side": "right",
      "skeleton": "/skeleton/hand/right",
      "binding_image_point": [ 30, 55 ]
    },
    "/input/skeleton/left": {
      "type": "skeleton",
      "side": "left",
      "skeleton": "/skeleton/hand/left",
      "binding_image_point": [ 30, 55]
    },
    "/output/haptic": {
      "type": "vibration",
      "binding_image_point": [ 32, 39 ]
    },
    "/pose/raw": {
      "type": "pose",
      "binding_image_point": [ 35,36 ]
    },
    "/pose/base": {
      "type": "pose",
      "binding_image_point": [ 21, 25 ]
    },
    "/pose/handgrip": {
      "type": "pose",
      "binding_image_point": [ 28, 34 ]
    },
    "/pose/tip": {
      "type": "pose",
      "binding_image_point": [ 21, 21]
    },
    "/pose/openxr_aim": {
      "type": "pose",
      "binding_image_point": [ 21, 21 ]
    }
  }
}
