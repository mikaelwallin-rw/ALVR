{
  "jsonid": "input_profile",
  "controller_type": "pico_controller_ice",
  "device_class": "TrackedDeviceClass_Controller",
  "resource_root": "pico",
  "driver_name": "pico",
  "legacy_binding": "{pico}/input/legacy_bindings_pico_controller2.json",
  "remapping" : "{pico}/input/pico_controller2_remapping.json",
  "input_bindingui_mode": "controller_handed",
  "should_show_binding_errors": true,
  "compatibility_mode_controller_type": "vive_controller",
  "input_bindingui_left": {
    "image": "{pico}/icons/controller_left.svg"
  },
  "input_bindingui_right": {
    "image": "{pico}/icons/controller_right.svg"
  },
  "input_source": {
    "/input/trackpad": {
      "type": "trackpad",
      "binding_image_point": [ 280, 200 ],
      "click": true,
      "touch": true,
      "order": 2
    },
    "/input/trigger": {
      "type": "trigger",
      "binding_image_point": [ 122, 200 ],
      "value": true,
      "click": true,
      "order": 1
    },
    "/input/grip": {
      "type": "trigger",
      "binding_image_point": [ 195, 390 ],
      "click": true,
      "order": 3
    },
    "/input/application_menu": {
      "type": "button",
      "click": true,
      "binding_image_point": [ 270, 255 ],
      "order": 4
    },
    "/input/system": {
      "type": "button",
      "binding_image_point": [ 280, 300 ],
      "click": true,
      "touch": true,
      "order": 0
    },
    "/input/skeleton/right": {
      "type": "skeleton",
      "side": "right",
      "skeleton": "/skeleton/hand/right",
      "binding_image_point": [ 200, 550 ]
    },
    "/input/skeleton/left": {
      "type": "skeleton",
      "side": "left",
      "skeleton": "/skeleton/hand/left",
      "binding_image_point": [ 200, 550 ]
    },
    "/output/haptic": {
      "type": "vibration",
      "binding_image_point": [ 192, 139 ]
    },
    "/pose/raw": {
      "type": "pose",
      "binding_image_point": [ 214, 216 ]
    },
    "/pose/base": {
      "type": "pose",
      "binding_image_point": [ 211, 250 ]
    },
    "/pose/handgrip": {
      "type": "pose",
      "binding_image_point": [ 284, 346 ]
    },
    "/pose/tip": {
      "type": "pose",
      "binding_image_point": [ 214, 216 ]
    },
    "/pose/openxr_aim": {
      "type": "pose",
      "binding_image_point": [ 214, 216 ]
    }
  }
}
